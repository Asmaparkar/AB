#load all the libraries
library(tidyverse)
library(sentimentr)
library(wordcloud)
library(tokenizers)
library(tm)
#read the hotel reviews data
print(getwd())
reviews<-read_csv("hotels.csv")
head(reviews)
tokens <-tokenize_words(reviews$Text)
print(tokens)
wordcloud(words=tokens,min.freq=10,max.words=60,colors="blue")
summary(tokens)
sentiment_score<-sentiment_score$tokens
Corpus <- Corpus(VectorSource(reviews))
Corpus <- tm_max(Corpus,removePunctuation)
Corpus <- tm_map(Corpus,removeNumbers)
Corpus <- tm_map_Corpus(content_transformer(tolower))
summary(Corpus)
head(Corpus)
dtm <- DocumentTermMatrix(Corpus)
